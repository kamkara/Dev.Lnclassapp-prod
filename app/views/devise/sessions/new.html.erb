<div class="mx-4">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :"NÂ° matricule ou Contact" %><br />
    <%= f.text_field :logged, autofocus: true, autocomplete: "logged" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Se Connecter", class:"button is-info" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>