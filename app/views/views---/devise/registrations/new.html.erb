<div class="container-fluid ">
  <div class="flex flex-wrap ">
    <div class="m-auto card p-4 rounded-md">
      <h2 class="mt-20">Créer Son Sompte</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <br />
          <div class="field ">
            <%= f.label :Nom %><br />
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder:"Prénom ...", class:"" %>
          </div>
          <div class="field my-4">
            <%= f.label :Prénom %><br />
            <%= f.text_field :last_name, placeholder:"Prénom ...", class:"" %>
          </div>
          <div class="field">
            <%= f.label :"N° Matricule" %><br />
            <%= f.phone_field :matricule, placeholder:"N° Matricule ...", class:"" %>
          </div>
          <div class="field my-4 ">
            <%= f.label :"N° WhatsApp" %><br />
            <%= f.phone_field :contact, placeholder:"N° WhatsApp ...", class:"" %>
          </div>
        <%= f.hidden_field :role, value:"Student" %>
         <div class="field>
         <%= f.label :"Tu es dans quelle ville?" %> <br>
         <%= f.text_field :city_name, class:"", placeholder:"Nom de la ville ..." %>
         </div>
         <div class="field my-4">
          <%= f.label :"Termanale ..." %> <br>
         <%= f.select :level_name, @levels.map{|level| [level.title]}, class:"", placeholder:"Quelle Tle ? ..." %>
         </div>

          <div class="actions my-2">
            <%= f.submit "VALIDER L'INSCRIPTION", class:"btn btn-primary p-2 border rounded-md mt-2" %>
          </div>
        <% end %>
          </div>
    </div>
  </div>

